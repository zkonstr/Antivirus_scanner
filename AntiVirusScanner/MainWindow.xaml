<Window x:Class="AntiVirusScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiVirusScanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Button Content="Scan" DockPanel.Dock="Bottom" Height="50" HorizontalAlignment="Center" Width="800" Click="Button_Click" FontSize="24" FontFamily="Calibri" FontWeight="Bold"/>
            <Label x:Name="TitleLabel" Content="Antivirus by Konstantin Zhybul" Background="#FF64D7FF" HorizontalContentAlignment="Center" FontFamily="Calibri" DockPanel.Dock="Top" Height="50" FontSize="24" FontWeight="Bold"/>
            <Button x:Name="SearchButton" Content="..." Canvas.Left="760" Canvas.Top="313" Width="40" Height="20" FontSize="16" FontFamily="Calibri" VerticalAlignment="Top" HorizontalAlignment="Left" Click="SearchButton_Click"/>
            <Border BorderThickness="1" BorderBrush="Black" Canvas.Left="458" Canvas.Top="313" Height="30" Width="302">
                <TextBlock x:Name="SearchBox" Canvas.Left="448" TextWrapping="Wrap" Canvas.Top="315" Width="300" Height="20" Text=""/>
            </Border>
        </DockPanel>

    </Grid>
</Window>
